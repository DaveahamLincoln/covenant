<p id="notice"><%= notice %></p>

<h1>Listing Squads</h1>

<table border= "1">
  <thead>
    <tr>
      <th>Squad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @squads.each do |squad| %>
      <tr>
        <td><%= squad.name %></td>
        <%if current_player.is_leader %>
          <%if current_player.id == squad.leader_id%>
            <td><%= link_to 'Show', squad %></td>
            <td><%= link_to 'Edit', edit_squad_path(squad) %></td>
            <td><%= link_to 'Destroy', squad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end%>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

