<%if current_player.is_leader%>

<div class="panel">

<%= simple_form_for @squad do |f| %>
    <% if @squad.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@squad.errors.count, "error") %> prohibited this squad from being saved:</h2>
  
        <ul>
        <% @squad.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
 
  <%= f.input :name %>
  <%= f.input :leader_id, :as => :hidden, :input_html => { :value => current_player.id }%>
  <br/>
  <%= f.button :submit %>
<% end %>

</div>

<%else%>

<h1>You must have Leader Mode Enabled to Create Squads</h1>

<%= link_to squad_path %>

<%end%>